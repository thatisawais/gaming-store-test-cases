pipeline {
    agent any

    environment {
        APP_REPO = 'https://github.com/thatisawais/gaming-store.git'
        TEST_REPO = 'https://github.com/thatisawais/gaming-store-test-cases.git'
    }

    stages {
        stage('Checkout Application') {
            steps {
                dir('app') {
                    git url: "${APP_REPO}", branch: 'main'
                }
            }
        }

        stage('Checkout Tests') {
            steps {
                dir('tests') {
                    git url: "${TEST_REPO}", branch: 'main'
                }
            }
        }

        stage('Build Application Docker Image') {
            steps {
                dir('app') {
                    sh 'docker build -t gaming-ecommerce-app .'
                }
            }
        }

        stage('Build Test Docker Image') {
            steps {
                dir('tests') {
                    sh 'docker build -t gaming-ecommerce-tests .'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh 'docker run -d --name gaming-app -p 3000:3000 gaming-ecommerce-app'

                    try {
                        sh 'docker run --rm --network container:gaming-app gaming-ecommerce-tests python3 -m unittest test.test_case'
                    } finally {
                        sh 'docker stop gaming-app || true'
                        sh 'docker rm gaming-app || true'
                    }
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build succeeded!'
        }
        failure {
            echo '❌ Build failed.'
        }
    }
}
