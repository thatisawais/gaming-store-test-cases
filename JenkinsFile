pipeline {
    agent any

    environment {
        APP_REPO = 'https://github.com/thatisawais/gaming-store.git'
        TEST_REPO = 'https://github.com/thatisawais/gaming-store-test-cases.git'
        APP_IMAGE = 'gaming-ecommerce-app'
        TEST_IMAGE = 'gaming-ecommerce-tests'
    }

    stages {
        stage('Checkout Application') {
            steps {
                dir('app') {
                    git branch: 'main', url: "${APP_REPO}"
                }
            }
        }

        stage('Checkout Tests') {
            steps {
                dir('tests') {
                    git branch: 'main', url: "${TEST_REPO}"
                }
            }
        }

        stage('Build Application Docker Image') {
            steps {
                dir('app') {
                    script {
                        sh 'docker build -t ${APP_IMAGE} .'
                    }
                }
            }
        }

        stage('Build Test Docker Image') {
            steps {
                dir('tests') {
                    script {
                        sh 'docker build -t ${TEST_IMAGE} .'
                    }
                }
            }
        }

        stage('Start Application Container') {
            steps {
                script {
                    sh '''
                        # Stop and remove existing container
                        if docker ps -q --filter "name=gaming-app"; then
                            docker stop gaming-app || true
                            docker rm gaming-app || true
                        fi

                        # Free port 3000 if used
                        USED_CONTAINER=$(docker ps --filter "publish=3000" -q)
                        if [ ! -z "$USED_CONTAINER" ]; then
                            docker stop $USED_CONTAINER || true
                            docker rm $USED_CONTAINER || true
                        fi

                        # Start application container
                        docker run -d --name gaming-app -p 3000:3000 ${APP_IMAGE}

                        # Wait for app to start
                        echo "‚è≥ Waiting for app to start..."
                        sleep 10
                    '''
                }
            }
        }

        stage('Run Tests Against App') {
            steps {
                script {
                    sh '''
                        echo "üöÄ Running tests..."
                        docker run --rm --network host ${TEST_IMAGE}
                    '''
                }
            }
        }
    }

    post {
        always {
            emailext (
                subject: "Jenkins Test Results: ${currentBuild.fullDisplayName}",
                body: """
                Build Number: ${env.BUILD_NUMBER}
                Build Status: ${currentBuild.currentResult}
                Test Summary:
                - Total Tests: ${currentBuild.testResultAction?.totalCount ?: 'N/A'}
                - Passed: ${currentBuild.testResultAction?.totalCount - (currentBuild.testResultAction?.failCount ?: 0) - (currentBuild.testResultAction?.skipCount ?: 0)}
                - Failures: ${currentBuild.testResultAction?.failCount ?: 0}
                - Skipped: ${currentBuild.testResultAction?.skipCount ?: 0}
                Check the build details at: ${env.BUILD_URL}
                """,
                to: "${env.CHANGE_AUTHOR_EMAIL ?: 'thatisowais@gmail.com'}",
                attachLog: true,
                mimeType: 'text/plain'
            )
        }
        success {
            echo '‚úÖ Application and test pipeline completed successfully.'
        }
        failure {
            echo '‚ùå Pipeline failed.'
        }
    }
}